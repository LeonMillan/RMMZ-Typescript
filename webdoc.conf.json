{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "includePattern": [
            "./lib/rmmz_*/*.d.ts"
        ],
        "excludePattern": [
            "./lib/external/effekseer.d.ts"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "template": {
        "outputSourceFiles": true,
        "readme": "./README.md",
        "repository": "https://github.com/LeonMillan/RMMZ-Typescript/"
    },
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : true
        },
        "applicationName": "RPG Maker MZ",
        "openGraph": {
            "title": "",
            "type": "website",
            "image": "",
            "site_name": "",
            "url": ""
        },
        "meta": {
            "title": "RPG Maker MZ Typescript API Documentation",
            "description": "Documentation for RPG Maker MZ core script",
            "keyword": "docs, documentation, rpgmakermz, typescript, corescript"
        },
        "linenums"      : true
    },
    "plugin/markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : false
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "lenient"       : true,
        "destination"   : "./dist/docs",
        "template"      : "pixi-webdoc-template",
        "export"        : "./dist/docs/rmmz.api.json"
    }
}
